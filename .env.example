# =======================================
# Work With Me Module - Environment Setup
# =======================================
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to version control.

# ---- Client-Side (exposed to browser) ----

# Google OAuth Client ID (for Sign In with Google button)
VITE_GOOGLE_CLIENT_ID="[oauth-client-id]"

# Admin email displayed in client (used for isAdmin check)
VITE_ADMIN_EMAIL="[your-admin-email@gmail.com]"

# Google Sheets direct link (shows "Google Sheet" button in admin panel)
VITE_GOOGLE_SHEET_URL="https://docs.google.com/spreadsheets/d/[your-sheet-id]/edit"

# ---- Server-Side Only (set in Vercel dashboard) ----

# Google Service Account credentials
GOOGLE_SERVICE_ACCOUNT_EMAIL="[service-account-email]@[project].iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n[your-key]\n-----END PRIVATE KEY-----"

# Google Sheets (applications database)
GOOGLE_SHEET_ID="[spreadsheet-id]"

# Google Drive (CV + audio uploads)
GOOGLE_DRIVE_FOLDER_ID="[drive-folder-id]"

# Admin verification (server-side)
ADMIN_EMAIL="[your-admin-email@gmail.com]"

# Admin notification email (receives alerts when new applications arrive)
ADMIN_NOTIFY_EMAIL="[your-notification-email@gmail.com]"

# Site URL (used in email links)
SITE_URL="[your-vercel-url]"

# Admin API secret (optional â€” extra layer of security for admin endpoints)
# Generate with: openssl rand -hex 32
ADMIN_API_SECRET="[random-secret-string]"

# Email notifications via Gmail SMTP (optional)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="[your-email@gmail.com]"
EMAIL_SERVER_PASSWORD="[gmail-app-password]"
